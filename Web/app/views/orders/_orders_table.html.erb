<%if orders.empty?%>
	<center>
		<h6>Queue is empty.</h6>
		</br>
	</center>
<%else%>
	<table class="table table-striped table-bordered">
		<thead>
			<tr>
				<th>#</th>
				<th>Drink</th>
				<th>Who?</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			<%orders.each_with_index do |order,index|%>
				<tr>
					<td><%=index += 1%></td>
					<td><%=order.drink.name%></td>
					<td><%=order.user.name%></td>
					<td>
						<%=link_to 'Delete', order_path(order), :method=>:delete%>
						<%if order.processing%>
							(Pouring...)
						<%end%>
					</td>
				</tr>
			<%end%>
		</tbody>
	</table>
<%end%>