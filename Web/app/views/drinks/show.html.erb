<ul class="breadcrumb">
	<li><%=link_to 'Drinks', drinks_path%><span class="divider"> / </span></li>
	<li><%=@drink.name%></li>
</ul>

<h3><%=@drink.name%></h3>
<h4>Available:<%=@drink.available?%></h4>

<dl class = "dl-horizontal">
	<dt>Ingredients</dt>
	<%@drink.pours.each do |pour|%>
		<dd><%=pour.ingredient.name%> (<%=pour.seconds.to_s%> seconds)</dd>
	<%end%>
</dl>

<ul class = "thumbnails">
	<li class="span3">
		<a href = "#" class="thumbnail"><%=image_tag @drink.image_url.to_s%></a>
	</li>
</ul>

<%=button_to 'Order this drink', orders_path(:drink=>@drink.id), :class=>'btn'%>